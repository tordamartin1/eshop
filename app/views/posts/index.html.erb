<h1>Články</h1>

<table class ="table">

  <thead>
    <tr>
      <th>Názov</th>
      <th>Text článku</th>
    </tr>
  </thead>  
   
  <tbody> 
    <% @posts.each do |post| %>
       <tr>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%= post.body %></td>
       </tr> 
      <% end %>
  </tbody>
</table>

