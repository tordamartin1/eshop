<h1>Produkty</h1>
<table class="table">

  <thead>
    <tr>
      <th>Obrazok</th>
      <th>Nazov produktu</th>
      <th>Popis</th>
      <th>Cena</th>
      <th>Obrazok</th>    
     </tr>
  </thead>

  <tbody>



   <% @products.each do |product| %>
      <tr>
        <td><%= product.image_url %></td>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.description %></td>
        <td><%= product.price%></td>
        <td><%= product.image_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>



